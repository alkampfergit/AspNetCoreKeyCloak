@page
@model PictureStore.Pages.PicturesModel
@{
}

<div class="text-center">
    <h1 class="display-4">Your Pictures</h1>
</div>

<div class="container">
    @for (var i = 0; i < Model.Pictures.Count; i += 3)
    {
        <div class="row">
            <div class="col-sm">
                <img class="img-fluid" src="Api/Pictures/image/@Model.Pictures[i].Id" />
                @Model.Pictures[i].Title
            </div>
            <div class="col-sm">
                @if (i + 1 < Model.Pictures.Count)
                {
                    <img class="img-fluid" src="Api/Pictures/image/@Model.Pictures[i + 1].Id" />
                    @Model.Pictures[i + 1].Title
                }
            </div>
            <div class="col-sm">
                @if (i + 2 < Model.Pictures.Count)
                {
                    <img class="img-fluid" src="Api/Pictures/image/@Model.Pictures[i + 2].Id" />
                    @Model.Pictures[i + 2].Title
                }
            </div>
        </div>
    }
</div>
<br />
<h3>Add  picture</h3>
<form enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" asp-for="Title" id="title" value="@Model.Title" />
    </div>
    <div class="form-group">
        <label for="file">Choose a picture file</label>
        <input type="file" class="form-control" asp-for="Upload" id="file" />
    </div>
    <input type="submit" class="btn btn-primary" />
</form>
